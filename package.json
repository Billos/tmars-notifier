{
  "name": "tmars-notifier",
  "version": "0.0.0",
  "repository": "git@github.com:Billos/tmars-notifier.git",
  "author": "billos <billos@billos.fr>",
  "dependencies": {
    "@vitejs/plugin-vue": "^6.0.0",
    "axios": "^1.10.0",
    "express": "^4.18.2",
    "redis": "^5.5.6",
    "tslog": "^4.8.2",
    "vite": "^7.0.0",
    "vue": "^3.5.17"
  },
  "devDependencies": {
    "@codedependant/semantic-release-docker": "^5.0.3",
    "@ianvs/prettier-plugin-sort-imports": "^4.4.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/exec": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@stylistic/eslint-plugin-js": "^2.11.0",
    "@stylistic/eslint-plugin-ts": "^2.11.0",
    "@types/express": "^4.17.17",
    "@typescript-eslint/eslint-plugin": "^8.16.0",
    "@typescript-eslint/parser": "^8.16.0",
    "concurrently": "^9.2.0",
    "eslint": "^9.15.0",
    "openapi-typescript-codegen": "^0.29.0",
    "prettier": "^3.4.1",
    "prettier-plugin-multiline-arrays": "^3.0.6",
    "prettier-plugin-organize-imports": "^4.1.0",
    "prettier-plugin-packagejson": "^2.5.6",
    "semantic-release": "^24.2.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && yarn build:frontend",
    "build:frontend": "vite build",
    "dev": "tsx watch --clear-screen src/index.ts",
    "dev:frontend": "vite",
    "dev:all": "concurrently \"yarn dev\" \"yarn dev:frontend\"",
    "docker:build": "docker build . -t billos/tmars-notifier:latest",
    "docker:dev": "docker-compose -f docker-compose.dev.yml up --build",
    "docker:prod": "docker-compose up --build",
    "docker:stop": "docker-compose down",
    "format": "prettier . --write",
    "format-check": "prettier . --check",
    "lint": "eslint src",
    "release": "semantic-release",
    "start": "node build/index.js",
    "start:backend": "node build/index.js",
    "start:prod": "yarn build && yarn start:backend",
    "type-check": "tsc --noEmit",
    "types:api:generate": "openapi --input https://raw.githubusercontent.com/gotify/server/v2.6.3/docs/spec.json --output ./src/remote/gotify"
  },
  "license": "GPL-3.0-only"
}
